root = true

[*.{html,js,css,sh,md}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
# trim_trailing_whitespace = true

[{makefile}]
charset = utf-8
indent_style = tab
indent_size = 2
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true

[{.gitignore}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
